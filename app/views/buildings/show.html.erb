<p style="color: green"><%= notice %></p>
<div class="container">
<h1><u>Información Edificio</u></h1>

<p><li><strong>Nombre Edificio: <%= @building.name.capitalize %></strong></li></p>

<p><li><strong>Dirección: <%= @building.adress.capitalize %></strong></li></p>

<p><li><strong>Ciudad: <%= @building.city.name %></strong></li></p>

<div>
    <p><li><strong>Cuenta con:</strong></li></p>

  <div class="col-md-6">
    <ol class="list-group list-group-numbered">
      <% @building.characteristics.each do |pc| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= pc.name %></div>
          </div>
        </li>
      <% end %>
    </ol>
  </div>

<p class="mt-3"><li><strong>Departamentos:</strong></li></p>
<%  @building.apartments.each do |ap| %>
<div class="fw-bold ms-5"><%= ap.number %>: <%= ap.status %></div>

 <% end %>



<div class="mt-4">
 <%= link_to "Volver al Index de Edificios", buildings_path, class:"btn btn-dark mb-3" %>
<% if current_user %>
  <%= link_to "Editar este Edificio", edit_building_path(@building), class:"btn btn-dark mb-3" %>
  <%= button_to "Eliminar este Edificio", @building, method: :delete, class:"btn btn-danger mt-4 mb-3" %>
  <% end %>
</div>
</div>